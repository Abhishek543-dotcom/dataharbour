# DataHarbour Environment Configuration
# IMPORTANT: Copy this file to .env and change all default values!

# ============================================================================
# CRITICAL: Change all passwords and secrets before deployment!
# Generate strong passwords using: openssl rand -base64 32
# ============================================================================

# PostgreSQL Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
POSTGRES_DB=airflow
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# MinIO Configuration (S3-compatible storage)
MINIO_ROOT_USER=CHANGE_ME_TO_STRONG_USERNAME
MINIO_ROOT_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
MINIO_ENDPOINT=minio:9000
MINIO_SECURE=false
MINIO_BUCKET_NAME=dataharbour

# Airflow Configuration
AIRFLOW_USERNAME=CHANGE_ME_TO_STRONG_USERNAME
AIRFLOW_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET_KEY

# Jupyter Configuration
JUPYTER_TOKEN=CHANGE_ME_TO_STRONG_TOKEN
JUPYTER_BASE_URL=http://jupyter:8888

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@yourdomain.com
PGADMIN_DEFAULT_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# Backend API Configuration
BACKEND_SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET_KEY_MIN_32_CHARS
BACKEND_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Spark Configuration
SPARK_MASTER_URL=spark://spark:7077
SPARK_UI_URL=http://spark:4040

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_AUDIT_LOG=true

# Environment
ENVIRONMENT=development
# Options: development, staging, production

# TLS/SSL Configuration (for production)
ENABLE_HTTPS=false
SSL_CERT_PATH=/certs/cert.pem
SSL_KEY_PATH=/certs/key.pem
